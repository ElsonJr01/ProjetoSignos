{
  "version": 2,
  "builds": [
    {
      "src": "*.php",
      "use": "@vercel/php"
    },
    {
      "src": "layouts/**/*.php",
      "use": "@vercel/php"
    },
    {
      "src": "assets/**",
      "use": "@vercel/static"
    },
    {
      "src": "signos.xml",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/assets/(.*)",
      "dest": "/assets/$1"
    },
    {
      "src": "/signos.xml",
      "dest": "/signos.xml"
    },
    {
      "src": "/(.*)",
      "dest": "/index.php"
    }
  ]
}
